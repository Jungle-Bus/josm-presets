<presets xmlns="http://josm.openstreetmap.de/tagging-preset-1.0"
	shortdescription="Jungle stops"
	description="Presets for adding main tags for public transport stops surveyed with Jungle Bus osmtracker layout"
	fr.description="Un preset pour ajouter rapidement les tags utiles pour les arrêts de transport. Fonctionne bien avec les layouts osmtracker de Jungle Bus"
	author="nlehuby"
    icon="one.png"
    link="https://github.com/Jungle-Bus/josm-presets"
	version="0.3">

	<group name="Jungle stops" icon="one.png">
		<group name="Bus" icon="Bouton_2.png">
			<item name="Generic bus stop" fr.name="Arrêt de bus" icon="Bouton_2.png" type="node">
				<key key="public_transport" value="platform" />
				<key key="highway" value="bus_stop" />
				<key key="bus" value="yes" />
			</item>

			<item name="Unmarked stop" fr.name="Arrêt sans indication" icon="Bouton_1.png" type="node">
				<key key="public_transport" value="platform" />
				<key key="highway" value="bus_stop" />
				<key key="bus" value="yes" />
				<key key="shelter" value="no" />
				<key key="pole" value="no" />
			</item>

			<item name="Stop with pole" fr.name="Poteau" icon="Bouton_2.png" type="node">
				<key key="public_transport" value="platform" />
				<key key="highway" value="bus_stop" />
				<key key="bus" value="yes" />
				<key key="pole" value="yes" />
				<key key="shelter" value="no" />
			</item>

			<item name="Stop with shelter" fr.name="Abribus" icon="Bouton_3.png" type="node">
				<key key="public_transport" value="platform" />
				<key key="highway" value="bus_stop" />
				<key key="bus" value="yes" />
				<key key="shelter" value="yes" />
			</item>
		</group>
		<group name="Boat" fr.name="Bateau" icon="Bouton_4.png">
			<item name="Boat stop" fr.name="Arrêt de bateau" icon="Bouton_4.png" type="node,closedway">
				<key key="public_transport" value="platform" />
				<key key="ferry" value="yes" />
			</item>
		</group>
		<group name="Taxi" fr.name="Taxi" icon="Bouton_1.png">
			<item name="Taxi (car)" fr.name="Arrêt de taxi (voiture)" icon="Bouton_6.png" type="node,closedway">
				<key key="amenity" value="taxi" />
			</item>
			<item name="Auto rickshaw" fr.name="Arrêt d'auto-rickshaw" icon="Bouton_5.png" type="node,closedway">
				<key key="amenity" value="taxi" />
				<key key="taxi_type" value="auto_rickshaw" />
			</item>
		</group>
       </group>
</presets>
